<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarNoBackground</item>
    </style>

    <style name="ActionBarNoBackground" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ff2f8f58</item>
    </style>

    <!-- Intercept Theme -->
    <style name="TableTheme" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:background">@color/grey_disable</item>
        <item name="android:textColor">@color/btn_text_pressed</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Base ListView style of the application -->
    <style name="AppTheme.ListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:background">#fff</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">#11000000</item>
    </style>
</resources>
