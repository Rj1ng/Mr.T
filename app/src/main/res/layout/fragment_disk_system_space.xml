<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <include
        android:id="@+id/container_disk_summary"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        layout="@layout/container_disk_summary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/container_disk_summary"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/imageView"
        android:background="#ff2f8f58"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/container_disk_summary"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/disk_space_system_tip1"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="12sp"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/disk_space_system_tip2"
        android:textColor="#888888"
        android:id="@+id/textView" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        layout="@layout/container_disk_list"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
