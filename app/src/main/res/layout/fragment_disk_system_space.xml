<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <include
        android:id="@+id/container_disk_summary"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        layout="@layout/container_disk_summary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <include
        android:id="@+id/container_disk_system_tip"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/container_disk_summary"
        layout="@layout/container_disk_bubble_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_below="@id/container_disk_system_tip"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/disk_space_system_tip2"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:id="@+id/textView" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        layout="@layout/container_disk_list"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
