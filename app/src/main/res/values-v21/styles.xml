<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarNoBackground</item>
        <item name="android:colorPrimaryDark">#ff2f8f58</item>
        <item name="android:colorPrimary">#ff2f8f58</item>
    </style>

    <!-- Customer application theme. -->
    <style name="CustomerTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">#ff2f8f58</item>
        <item name="android:colorPrimary">#ff2f8f58</item>
        <item name="android:actionBarStyle">@style/CustomerThemeActionBarNoBackground</item>
    </style>

    //traffic
    <style name="t_ProgressBar_Green" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/t_notification_progressbar_horizontal_green</item>
        <item name="android:minHeight">16.0dip</item>
    </style>

    <style name="TextColorAsPrimaryDarkStyle">
        <item name="android:textColor">?android:colorPrimaryDark</item>
    </style>

    <style name="BackgroundAsPrimaryDarkStyle">
        <item name="android:background">?android:colorPrimaryDark</item>
    </style>

</resources>
